extends layout

block content
	.container
		h1.
			Available Lesson Plans
		table.table.table-striped
			thead
				th  Title
				th  Description
				th  Author
			tbody
			each lp, i in lplist
				tr
					td  #{lp.title}
					td  #{lp.description}
					td  #{lp.author}
		.row
			.col-md-6
				a(href="/") Home
			.col-md-6
				a(href="/newlp") Add another