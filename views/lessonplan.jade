html
  head
    title=title
    link(
      href='//netdna.bootstrapcdn.com/bootstrap/3.1.1/css/bootstrap.min.css',
      rel='stylesheet'
    )
  body
    div.container

      div.page-header
        h1 Add a lesson plan

      if errors
        each error in errors
          div.alert.alert-danger
            span #{error.error}
      if saved
        div.alert.alert-success
          span Your lesson plan has been saved
      form.login-form.form-horizontal(method='post', role='form')
        input(name='_csrf', type='hidden', value=csrfToken)

        div.form-group
          label.col-sm-4 Title
          div.col-sm-8
            input.form-control(
              placeholder='Lesson Plan Title',
              required=true,
              name='lpTitle',
              type='text',
              id='lpTitle'
              value=lpTitle)
        div.form-group
          label.col-sm-4 Description
          div.col-sm-8
            input.form-control(placeholder='Description',
              required=true,
              name='description',
              type='text',
              id='description'
              value=description)
        div.form-group
          label.col-sm-4 Author
          div.col-sm-8
            input.form-control(placeholder='Author',
              required=true,
              name='author',
              type='text',
              id='author'
              value=author)
        div.form-group
          div.col-sm-offset-4.col-sm-8
            button.login.btn.btn-primary(type='submit') Save
        div.pull-right
          a(href="/") Return to home page