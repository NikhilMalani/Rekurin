extends layout

block content
	.container
		h1= title
		form#formAddLP(name="addlp",class="form-controlinline",method="post",action="/addlp")
			input#inputTitle(type="text",class="form-control",placeholder="Title",name="title")
			input#inputDescription(type="text",class="form-control",placeholder="Description",name="description")
			input#inputAuthor(type="text",class="form-control",placeholder="Author",name="author")
			button#btnSubmit(type="submit",class="btn btn-default") Add
		.row
			.col-md-6
				a(href="/") Home
			.col-md-6
				a(href="/lplist") Browse lesson plans